<mvc:View
    controllerName="edu.be.ap.hr.zsd002hr.controller.List"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <semantic:SemanticPage
        id="listPage"
        preserveHeaderStateOnScroll="true"
        toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title
                id="listPageTitle"
                text="{listView>/title}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>
            <!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
            <List
                id="list"
                width="auto"
                class="sapFDynamicPageAlignContent"
                items="{
                    path: '/PersonnelSet',
                    sorter: {
                        path: 'LastName',
                        descending: false
                    },
                    groupHeaderFactory: '.createGroupHeader'
                }"
                busyIndicatorDelay="{listView>/delay}"
                noDataText="{listView>/noDataText}"
                mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                selectionChange=".onSelectionChange">

                <headerToolbar>
                    <OverflowToolbar>
                        <ComboBox id="department" change=".onSelectionFilter">
                            <core:ListItem key="" text="All departments" />
                            <core:ListItem key="Information Tec" text="Information Tec" />
                            <core:ListItem key="HR" text="HR" />
                        </ComboBox>
                        <ToolbarSpacer/>
                        <!-- <Button
                            id="sortButton"
                            press=".onOpenViewSettings"
                            icon="sap-icon://sort"
                            type="Transparent"/> -->

                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                        type="Navigation"
                        press=".onSelectionChange"
                        title="{FirstName} {LastName}"
                         />
                </items>
            </List>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>