<mvc:View
    controllerName="edu.be.ap.hr.zsd002hr.controller.List"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <semantic:SemanticPage
        id="listPage"
        preserveHeaderStateOnScroll="true"
        toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title
                id="listPageTitle"
                text="{listView>/title}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>
            <!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
            <List
                id="list"
                width="auto"
                class="sapFDynamicPageAlignContent"
                items="{
                    path: '/PersonnelSet',
                    sorter: {
                        path: 'LastName',
                        descending: false
                    },
                    groupHeaderFactory: '.createGroupHeader'
                }"
                busyIndicatorDelay="{listView>/delay}"
                noDataText="{listView>/noDataText}"
                mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                selectionChange=".onSelectionChange">

                <headerToolbar>
                    <OverflowToolbar>
                        <ComboBox id="department" selectedKey="all" change=".onFilter">
                        <items>
                            <core:Item key="all" text="All departments" />
                            <core:Item key="EX00" text="Executives" />
                            <core:Item key="FI00" text="Finance" />
                            <core:Item key="HR00" text="Human Resources" />
                            <core:Item key="IT00" text="Information Tech" />
                            <core:Item key="MM00" text="Materials Management" />
                            <core:Item key="PP00" text="Production" />
                            <core:Item key="PU00" text="Purchasing" />
                        </items>
                        </ComboBox>
                        <ToolbarSpacer/>
                        <!-- <Button
                            id="sortButton"
                            press=".onOpenViewSettings"
                            icon="sap-icon://sort"
                            type="Transparent"/> -->

                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                        type="Navigation"
                        press=".onSelectionChange"
                        title="{FirstName} {LastName}"
                         />
                </items>
            </List>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>