<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<f:Form
		editable="true" visible="{detailView>/edit}">
		<f:layout>
			<f:ResponsiveGridLayout
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="3"
				columnsL="2"
				columnsM="2"
				singleContainerFullSize="false" />
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="Address">
				<f:formElements>
					<f:FormElement label="Street">
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/Street}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="ZIP Code/City">
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/PostalCode}" />
						</f:fields>
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/City}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Country">
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/Country}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="State/Province">
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/Region}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="Personal">
				<f:formElements>
					<f:FormElement label="First name">
						<f:fields>
							<Input value="{json>/Personnel/FirstName}" />
						</f:fields>
					</f:FormElement>
						<f:FormElement label="Second name">
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/SecondName}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Last name">
						<f:fields>
							<Input value="{json>/Personnel/LastName}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Date of birth">
						<f:fields>
							<Text text="{json>/Personnel/ToPersonnelInfo/Birthday}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Gender">
						<f:fields>
							<Input value="{json>/Personnel/ToPersonnelInfo/Gender}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Social security nr.">
						<f:fields>
							<Text text="{json>/Personnel/ToPersonnelInfo/SocialSecNr}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="Online">
				<f:formElements>
					<f:FormElement label="Email">
						<f:fields>
							<Input value="{json>/Personnel/Mail}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Tel.">
						<f:fields>
							<MaskInput mask="9999999999" placeholderSymbol="_" value="{json>/Personnel/PhoneNr}" showClearIcon="true" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Bank nr.">
						<f:fields>
							<MaskInput mask="BECC-CCCC-CCCC-CCCC" value="{json>/Personnel/ToPersonnelInfo/Iban}">
								<rules>
									<MaskInputRule maskFormatSymbol="C" regex="[A-Z0-9]"/>
								</rules>
							</MaskInput>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>