<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<f:Form
		editable="true" visible="{detailView>/edit}">
		<f:layout>
			<f:ResponsiveGridLayout
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="3"
				columnsL="2"
				columnsM="2"
				singleContainerFullSize="false" />
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="Address">
				<f:formElements>
					<f:FormElement label="Street">
						<f:fields>
							<Input id="street" value="{json>/Personnel/to_info/Street}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="ZIP Code/City">
						<f:fields>
							<Input id="postal" value="{json>/Personnel/to_info/Postal_code}" />
						</f:fields>
						<f:fields>
							<Input id="city" value="{json>/Personnel/to_info/City}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="State/Province">
						<f:fields>
							<Input id="region" value="{json>/Personnel/to_info/Region}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Country">
						<ComboBox id="CountryComboBox" selectedKey="{json>/Personnel/to_info/Country_code}" items="{/ZSD_002_COUNTRY}">
                            <items>
                                <core:Item key="{Country_code}" text="{Country_name}" />
                            </items>
                        </ComboBox>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="Personal">
				<f:formElements>
					<f:FormElement label="First name">
						<f:fields>
							<Input id="firstname" value="{json>/Personnel/First_name}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Last name">
						<f:fields>
							<Input id="lastname" value="{json>/Personnel/Last_name}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Date of birth">
						<f:fields>
							<Text text="{ 
								path: 'json>/Personnel/to_info/Birthday',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: { style: 'Short',
								  			pattern: 'dd/MM/yyyy' 
								}  
							  }"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Gender">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Gender}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Social security nr.">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Social_sec_nr}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="Online">
				<f:formElements>
					<f:FormElement label="Email">
						<f:fields>
							<Input id="mail" value="{json>/Personnel/to_info/Mail}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Tel.">
						<f:fields>
							<MaskInput id="phone" mask="99999999999" placeholderSymbol="_" value="{json>/Personnel/to_info/Phone_nr}" showClearIcon="true" />
						</f:fields>
					</f:FormElement>
					<!-- <f:FormElement label="Bank nr.">
						<f:fields>
							<MaskInput id="iban" mask="BECC-CCCC-CCCC-CCCC" value="{json>/Personnel/to_info/Iban}">
								<rules>
									<MaskInputRule maskFormatSymbol="C" regex="[A-Z0-9]"/>
								</rules>
							</MaskInput>
						</f:fields>
					</f:FormElement> -->
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>