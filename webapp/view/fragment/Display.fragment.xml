<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<f:Form
		editable="false" visible="{= !${detailView>/edit} }">
		<f:layout>
			<f:ResponsiveGridLayout
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="3"
				columnsL="2"
				columnsM="2"
				singleContainerFullSize="false" />
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="Address">
				<f:formElements>
					<f:FormElement label="Street">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Street}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="ZIP Code/City">
						<f:fields>
							<Text text="{json>/Personnel/to_info/PostalCode} {json>/Personnel/to_info/City}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Country">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Country}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="State/Province">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Region}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="Personal">
				<f:formElements>
					<f:FormElement label="Full name">
						<f:fields>
							<Text text="{json>/Personnel/First_name} {json>/Personnel/to_info/Second_Name} {json>/Personnel/Last_name}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Date of birth">
						<f:fields>
							<Text text="{ 
								path: 'json>/Personnel/to_info/Birthday',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: { style: 'Short',
								  			pattern: 'dd/MM/yyyy' 
								}  
							  }"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Gender">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Gender}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Social security nr.">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Social_sec_nr}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="Online">
				<f:formElements>
					<f:FormElement label="Email">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Mail}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Tel.">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Phone_nr}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Bank nr.">
						<f:fields>
							<Text text="{json>/Personnel/to_info/Iban}" />
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>