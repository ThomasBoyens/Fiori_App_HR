<mvc:View
    controllerName="edu.be.ap.hr.zsd002hr.controller.App"
    displayBlock="true"
    height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc">
    <App
        id="app"
        busy="{appView>/busy}"
        busyIndicatorDelay="{appView>/delay}">
        <f:FlexibleColumnLayout
            id="layout"
            layout="{appView>/layout}"
            stateChange="onStateChanged"
            backgroundDesign="Translucent">
        </f:FlexibleColumnLayout>
    </App>
</mvc:View>